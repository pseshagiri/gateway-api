pipeline{
    environment{
        GITHUBURL = 'https://github.com/pseshagiri/gateway-api.git'
    }
    agent any
    SCM {
        * * * * *
    }
    stages{
        stage('GIT Checkout'){
            steps{
              git branch: 'routes', credentialsId: 'GitUserNamePassword', url: ${GITHUBURL}
            }
        }
        stage('clean'){
            steps{
             ./gradle clean
            }
        }
        stage('build'){
            steps{
             ./gradle build
            }
        }
        /*
